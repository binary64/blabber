{
  "name": "blabber",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blabber",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/blabber",
        "outputPath": "dist/apps/blabber"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/blabber"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "blabber:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "blabber:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "blabber:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "blabber:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/blabber/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/blabber/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/blabber",
        "commands": [
          {
            "command": "graphql-codegen --config codegen.ts"
          }
        ]
      }
    }
  },
  "tags": ["react", "next", "frontend"]
}
